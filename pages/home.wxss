/* /pages/home/home.wxss */
page {
  --primary-color: #4f46e5;
  --primary-light: #eef2ff;
  --text-primary: #111827;
  --text-secondary: #6b7280;
  --bg-color: #f9fafb;
  --card-bg: #ffffff;
  --border-color: #e5e7eb;
  --success-color: #10b981;
  --error-color: #ef4444;
}
.container {
  padding: 40rpx 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
  box-sizing: border-box;
}
.header {
  margin-bottom: 40rpx;
}
.title {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--text-primary);
}
.subtitle {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-top: 10rpx;
}
.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: linear-gradient(135deg, #5c60f1, #7b7ef3);
  border-radius: 24rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx -10rpx rgba(79, 70, 229, 0.4);
  color: white;
}
.stat-item {
  text-align: center;
  flex: 1;
}
.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}
.stat-unit {
  font-size: 28rpx;
  margin-left: 4rpx;
  opacity: 0.8;
}
.stat-label {
  font-size: 26rpx;
  margin-top: 10rpx;
  opacity: 0.8;
}
.stat-divider {
  width: 2rpx;
  height: 80rpx;
  background-color: rgba(255,255,255,0.3);
}
.menu-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-bottom: 60rpx;
}
.menu-item {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid var(--border-color);
}
.menu-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}
.menu-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}
.menu-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}
.category-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-primary);
}
.category-card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid var(--border-color);
}
.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.category-name { font-size: 32rpx; font-weight: 600; }
.category-stats { font-size: 28rpx; color: var(--text-secondary); }
.progress-bar {
  height: 16rpx;
  background-color: #e5e7eb;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}
.btn-group { display: flex; justify-content: flex-end; }
.category-btn {
  margin-left: 20rpx;
  background-color: var(--primary-light);
  color: var(--primary-color);
  border: none;
  font-weight: 500;
  border-radius: 30rpx;
  font-size: 26rpx;
}
.category-btn.primary {
  background-color: var(--primary-color);
  color: #fff;
}
.reset-btn {
  margin-top: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #9ca3af;
}

